{
  "manifest_version": 3,
  "name": "Browseable.ai - AI Shopping Co-Pilot",
  "version": "1.0.0",
  "description": "AI-powered shopping assistant that helps you find and curate products across any e-commerce site",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.shopify.com/*",
        "https://*/products/*",
        "https://*/product/*",
        "https://*/shop/*",
        "https://*.amazon.com/*",
        "https://*.ebay.com/*",
        "https://*.etsy.com/*",
        "https://*.target.com/*",
        "https://*.walmart.com/*"
      ],
      "js": ["content-script.js"],
      "css": ["content-styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Browseable.ai"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["chat-widget.js", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}